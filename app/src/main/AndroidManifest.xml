<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.picodiploma.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.dicoding.picodiploma.githubuserapp.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.dicoding.picodiploma.githubuserapp.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApp">

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.GithubUserApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/Theme.GithubUserApp.NoActionBar"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name="com.dicoding.picodiploma.githubuserapp.ui.home.detail.DetailUserActivity" />

        <activity
            android:name=".ui.home.setting.SettingActivity"
            android:label="Setting"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <receiver
            android:name=".receiver.AppReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver android:name=".widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/xml_widget" />
        </receiver>

        <provider
            android:name=".provider.AppProvider"
            android:authorities="com.dicoding.picodiploma.githubuserapp"
            android:enabled="true"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.dicoding.picodiploma.githubuserapp.READ_DATABASE"
            android:writePermission="com.dicoding.picodiploma.githubuserapp.WRITE_DATABASE" />

        <service
            android:name=".widget.StackWidgetService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>
</manifest>